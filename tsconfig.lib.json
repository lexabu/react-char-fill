{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true
  },
  "include": ["src/lib/**/*"],
  "exclude": ["dist", "node_modules", "types/**/*.d.ts"]
}
