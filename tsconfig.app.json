{
  "compilerOptions": {
    "baseUrl": "./src",
    "types": ["cypress", "node"],
    "paths": {
      "lib/*": ["lib/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    // "outDir": "./dist",
    // "declaration": true,
    // "declarationDir": "./types",
    // "emitDeclarationOnly": true
  },
  "include": ["src/lib/**/*", "src/demo/**/*", "docs"],
  "exclude": ["dist", "node_modules", "types/**/*.d.ts"]
}
