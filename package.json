{
  "name": "react-char-fill",
  "version": "1.0.8",
  "author": "Alex Abushanab",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lexabu/react-char-fill.git"
  },
  "main": "dist/react-char-fill.umd.js",
  "module": "dist/react-char-fill.es.js",
  "devDependencies": {
    "@cypress/react18": "^2.0.1",
    "@testing-library/cypress": "^10.0.2",
    "@types/cypress": "^1.1.3",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "cypress": "^13.13.2",
    "cypress-vite": "^1.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^3.4.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "gh-pages": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "bugs": {
    "url": "https://github.com/lexabu/react-char-fill/issues"
  },
  "description": "A React component for creating flexible character-based ratings, perfect for star ratings and other similar use cases.",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "homepage": "https://github.com/lexabu/react-char-fill#readme",
  "keywords": [
    "react",
    "rating",
    "character",
    "typescript",
    "component",
    "frontend",
    "ui",
    "star-rating",
    "reviews"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "bp": "vite build && vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "preview": "vite preview",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "test": "cypress",
    "cypress": "npx cypress open",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf bun.lockb && bun i",
    "deploy": "npm run build:lib && npm run build:demo && gh-pages -d dist-demo",
    "build:lib": "tsc -p tsconfig.app.json && vite build",
    "build:demo": "vite build --outDir dist-demo",
    "publish:npm": "npm run build:lib && npm publish --registry=https://registry.npmjs.org/",
    "publish-bump:npm": "npm version patch && npm run build:lib && npm publish --registry=https://registry.npmjs.org/",
    "publish:github": "npm run publish:github-prepare",
    "publishbump:github": "npm version patch && npm run publish:github-prepare",
    "publish:github-prepare": "export $(cat .env | xargs) && npm run build:lib && npm run name:scope && npm publish --registry=https://npm.pkg.github.com && npm run name:restore",
    "name:scope": "node -e \"let pkg=require('./package.json'); pkg.name='@lexabu/react-char-fill'; require('fs').writeFileSync('package.json', JSON.stringify(pkg, null, 2));\"",
    "name:restore": "node -e \"let pkg=require('./package.json'); pkg.name='react-char-fill'; require('fs').writeFileSync('package.json', JSON.stringify(pkg, null, 2));\""
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
